/**index.wxss**/
.topBg image{
	display: block;
	width: 100%;
	height:160px;
}
.topBg{
	position: relative;
}
.topBg .infoBox{
	position: absolute;
	width: 100%;
	height: 100%;
}
.topBg .infoBox .title{
	color: white;
	font-size: 12px;
	opacity: 0.7;
}
.topBg .infoBox>.item{
	width: 100%;
	padding: 0 20px;
	text-align: center;
}
.topBg .infoBox .title .borderB{
	width: 100px;
	margin: 0 auto;
	text-align: left;
	position: relative;
}
.topBg .infoBox .title .borderB:after{
	content: '';
	position: absolute;
	left: 0;
	bottom:-5px;
	width:30px;
	height: 1px;
	background: white;
}
.topBg .infoBox .day{
	color: white;
	font-size: 35px;
	font-weight: bold;
	margin-top: 10px;
	text-align: center;
}
